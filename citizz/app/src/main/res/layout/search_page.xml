<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/parent">


    <View
        android:id="@+id/baniere"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sub_baniere"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/baniere"
        app:layout_constraintEnd_toEndOf="@+id/baniere"
        app:layout_constraintStart_toStartOf="@+id/baniere"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ic_loupe"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_loupe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/baniere"
        app:layout_constraintTop_toTopOf="@+id/baniere" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Research"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/baniere"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/baniere"
        app:layout_constraintTop_toTopOf="@+id/baniere" />


</androidx.constraintlayout.widget.ConstraintLayout>