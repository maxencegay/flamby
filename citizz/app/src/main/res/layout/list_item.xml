<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/layouttop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profilpicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_advert3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kindadvert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Object/animal lost"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/advertTitle"
                    style="@style/SubtitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="AdvertTitle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/description_aff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/city_aff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="City"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/department_aff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>



                <TextView
                    android:id="@+id/region_aff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Region"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address_aff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutleft"
            android:layout_width="105dp"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="95dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textSize="16sp"
                style="@style/SubtitleTextStyle"/>

            <TextView
                android:id="@+id/city"
                style="@style/SubtitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City :"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/region"
                style="@style/SubtitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Region :"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/department"
                style="@style/SubtitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Department :"
                android:textSize="16sp" />



            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textSize="16sp"
                style="@style/SubtitleTextStyle"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>